{{page-title "Create"}}


<div class="p-3">

<div class="py-3">
    <Input type="text" name="projectname" @value={{this.projectName}}
    class="block border rounded-sm ring-2 ring-sky-500 placholder:italic placeholder:text-slate-400" placeholder="Enter Project Name" />
</div>


<div class="py-3">
    <input type="file" name="initialFile" id="" {{on "change" this.updateFile}}>
</div>


<div class="py-3">
    <button class="bg-indigo-500 py-1 px-5 rounded-md  text-white" type="submit" {{on "click" this.createProject}} >Save</button>
</div>

</div>


{{outlet}}